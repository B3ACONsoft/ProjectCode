<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="beaconsoft.sycorowlayouts">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity"></activity>
        <activity
            android:name=".LeaguesActivity"
            android:label="Administrative Dashboard"
            android:launchMode="singleTop"
            android:windowActionBar="false"></activity>
        <activity
            android:name=".LoginActivity"
            android:label="Super Yeti Coach"
            android:parentActivityName=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".QuickAddPlayersActivity"
            android:label="Quick Add Player"
            android:parentActivityName=".LeaguesActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="beaconsoft.sycorowlayouts.LeaguesActivity" />
        </activity>
        <activity
            android:name=".QuickEditPlayerActivity"
            android:label="Edit Player"
            android:parentActivityName=".LeaguesActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="beaconsoft.sycorowlayouts.LeaguesActivity" />
        </activity>
        <activity
            android:name=".QuickAddTeamsActivity"
            android:label="Quick Add Teams"
            android:parentActivityName=".LeaguesActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="beaconsoft.sycorowlayouts.LeaguesActivity" />
        </activity>
        <activity
            android:name=".UserRosterActivity"
            android:label="Back to Home Screen"
            android:parentActivityName=".UserHomeActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".UserHomeActivity" />
        </activity>
        <activity
            android:name=".UserHomeActivity"
            android:label="Users Home Panel"></activity>
        <activity
            android:name=".CoachHomeActivity"
            android:label="Coach&apos;s Panel" />
    </application>

</manifest>
